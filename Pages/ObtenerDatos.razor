@page "/ObtenerDatos"

<div class="row justify-content-center mt-md-2">
    <div class="col-12 col-sm-4 col-md-8">
        <MudCard>
            <MudCardContent>
                <MudGrid>
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="FirstName" Label="First Name" Variant="Variant.Outlined" />
                    </MudItem>
                </MudGrid>
            </MudCardContent>
        </MudCard>
    </div>
</div>

@code{
    public string FirstName {get; set;}
}