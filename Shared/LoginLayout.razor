@inherits LayoutComponentBase
<MudThemeProvider Theme="currentTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
    <div class="d-flex flex-column mud-width-full">
        <MudPaper Elevation="25" Class="pa-8" Width="100%" MaxWidth="500px">
            <div class="row">
                <MudIconButton Class="ml-auto" Icon="@Icons.Material.Filled.Brightness4" Color="Color.Inherit" OnClick="@((e) => DarkMode())"></MudIconButton>
            </div>
            @Body
        </MudPaper>
        <MudAlert Severity="Severity.Info" Class="mt-8 mud-width-full" Style="max-width:500px;" Elevation="25">No authentication is required, click sign in.</MudAlert>
    </div>
</MudContainer>

@if(currentTheme == darkTheme){
    <style> 
        .table{
            color: white;
        }
    </style>
}else{
    <style> 
        .table{
            color: black;
        }
    </style>
}

